<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model: @user do |f| %>
<div class="form-group">
  <div for="inputName">Name</div>
  </div>
  <div class="form-group">
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  </div>
  <div class="form-group">
  <div for="inputImage">Image</div>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
  </div>
  <div class="form-group">
  <div for="inputIntroduction">Introduction</div>
  <div><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%></div>
  </div>
  <div class="form-group">
  <%= f.submit "Update User", class:"btn btn-secondary" %>
  </div>
<% end %>
    </div>
  </div>
</div>